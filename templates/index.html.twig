<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Character and Family</title>
    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: url('{{ asset('uploads/3334896.jpg') }}') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        /* Main Character Styling */
        .character {
            text-align: center;
            padding: 20px;
            border-bottom: 2px solid #eee;
        }

        .character img {
            width: 270px;
            height: 240px;
            margin-bottom: 20px;
            border: 6px solid #ddd;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .character h2 {
            font-size: 32px;
            color: #444;
        }

        .character p {
            font-size: 20px;
            margin: 10px 0;
        }

        /* Family Members Section */
        .family-members {
            text-align: center;
            margin-top: 20px;
        }

        .family-members h2 {
            font-size: 20px;
            color: #444;
            margin-bottom: 15px;
        }

        .family-member {
            display: inline-block;
            width: 300px;
            padding: 15px;
            margin: 15px;
            background: #f8f9fa;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }

        .family-member:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .family-member img {
            width: 220px;
            height: 180px;
            margin-bottom: 15px;
            border: 4px solid #ddd;
        }

        .family-member p {
            font-size: 15px;
            margin: 5px 0;
            color: #555;
        }
    </style>
</head>
<body>
<div class="container">
    <!-- Main Character Section -->
    <div class="character">
        <h2>Main Character</h2>
        <img src="{{ asset('uploads/images/' ~ main_character.image) }}" alt="{{ main_character.name }}">
        <p><strong>Name:</strong> {{ main_character.name }}</p>
        <p><strong>Age:</strong> {{ main_character.age }}</p>
        <p><strong>Role in Family:</strong> {{ main_character.roleInFamily.name }}</p>
        <p><strong>Role in IT Team:</strong> {{ main_character.roleInItTeam.name }}</p>
    </div>

    <!-- Family Members Section -->
    <div class="family-members">
        <h2>Family Members</h2>
        {% for member in main_character.familyMembers %}
            <a href="/dialog/{{ member.id }}">
                <div class="family-member" data-member-id="{{ member.id }}">
                    <img src="{{ asset('uploads/images/' ~ member.image) }}" alt="{{ member.name }}">
                    <p><strong>Name:</strong> {{ member.name }}</p>
                    <p><strong>Age:</strong> {{ member.age }}</p>
                    <p><strong>Role in Family:</strong> {{ member.roleInFamily.name }}</p>
                    <p><strong>Role in IT Team:</strong> {{ member.roleInItTeam.name }}</p>
                </div>
            </a>
        {% endfor %}
    </div>
</div>

</body>
</html>
