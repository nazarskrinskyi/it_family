<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Character and Family</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .character, .family-members {
            margin-bottom: 20px;
        }
        .character img, .family-member img {
            border-radius: 8px;
            max-width: 100px;
        }
        .family-member {
            display: inline-block;
            text-align: center;
            margin: 10px;
            cursor: pointer;
        }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            color: #fff;
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background: #333;
            padding: 20px;
            border-radius: 8px;
            max-width: 500px;
            text-align: center;
        }
        .modal-close {
            margin-top: 20px;
            cursor: pointer;
            color: #ff5252;
        }
    </style>
</head>
<body>
<div class="container">
    <!-- Main Character Section -->
    <div class="character">
        <h2>Main Character</h2>
        <img src="{{ main_character.image }}" alt="{{ main_character.name }}">
        <p><strong>Name:</strong> {{ main_character.name }}</p>
        <p><strong>Age:</strong> {{ main_character.age }}</p>
        <p><strong>Role in Family:</strong> {{ main_character.roleInFamily }}</p>
        <p><strong>Role in IT Team:</strong> {{ main_character.roleInItTeam }}</p>
    </div>

    <!-- Family Members Section -->
    <div class="family-members">
        <h2>Family Members</h2>
        {% for member in main_character.familyMembers %}
            <div class="family-member" data-member-id="{{ member.id }}">
                <img src="{{ member.image }}" alt="{{ member.name }}">
                <p>{{ member.name }}</p>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Modal for Dialog -->
<div id="dialog-modal" class="modal">
    <div class="modal-content">
        <h2>Dialog</h2>
        <p id="dialog-content"></p>
        <div class="modal-close">Close</div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const modal = document.getElementById('dialog-modal');
    const dialogContent = document.getElementById('dialog-content');
    const modalClose = document.querySelector('.modal-close');

    document.querySelectorAll('.family-member').forEach(member => {
      member.addEventListener('click', async () => {
        const memberId = member.getAttribute('data-member-id');

        // Fetch dialog via AJAX (replace '/dialog' with your API endpoint)
        const response = await fetch(`/dialog?member_id=${memberId}`);
        const data = await response.json();

        // Populate the modal with dialog content
        dialogContent.innerText = data.dialogContent || 'No dialog available.';
        modal.style.display = 'flex';
      });
    });

    modalClose.addEventListener('click', () => {
      modal.style.display = 'none';
    });
  });
</script>
</body>
</html>
